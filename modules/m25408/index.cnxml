    <section id="id4600304">
      <title>Memorandum</title>
      <section id="id4296992">
        <title>Possible reasons why people do not have enough food to eat</title>
        <list id="id3165522" list-type="bulleted">
          <item>Unemployed</item>
          <item>No income</item>
          <item>Lives far from services</item>
          <item>Poor transport</item>
          <item>No cooling facilities (food becomes bad)</item>
        </list>
      </section>
